 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
 <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
<title>Show Nextweek Movies</title>
<table id="sample-table" style="width:100%;text-align:left">
  <thead>
  <tr >
    <th class="admin-header">Movies Name</th>
    <th class="admin-header"> Release Date</th>
    <th class="admin-header"> ID</th>
    <th class="admin-header"> Options</th>
  </tr>
  </thead>
  <tbody>
  {{#each nextweek}}
  <tr>
    <td class="td-class">{{this.moviename}}</td>
    <td class="td-class">{{this.moviereleasedate}}</td>
     <td class="td-class"><input style="width: 90%;" type="text" value="{{this.movieid}}"> </td>
    <td class="td-class">
      
        <a style="color: green;" href="/admin/edit-nextweek/{{this._id}}"><i class="fas fa-user-edit"></i>Edit</a>
        <a href="/admin/delete-nextweek/{{this._id}}" onclick="return confirm('Are You SHure to Delete = {{this.moviename}}')"><i class="fas fa-trash"></i>Delete</a>
        
        </td>
  </tr>
  {{/each}}
  </tbody>
</table>



<script>

  $(function(){
    $('#sample-table').DataTable();
  });
</script>